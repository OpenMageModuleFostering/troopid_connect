<?xml version="1.0"?>
<layout version="0.2.0">
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>troopid_connect/troopid.css</stylesheet></action>
        </reference>
        <reference name="before_body_end">
            <block type="troopid_connect/cart" name="troopid.connect.script" as="script" template="troopid/connect/script.phtml" />
        </reference>
    </default>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="unsetChild">
                <alias>coupon</alias>
            </action>
            <block type="core/text_list" name="checkout.custom.coupon" as="coupon">
                <action method="insert">
                    <block>checkout.cart.coupon</block>
                </action>
                <block type="troopid_connect/cart" name="checkout.cart.connect" as="connect" template="troopid/connect/cart.phtml" before="-"/>
            </block>
        </reference>
    </checkout_cart_index>

    <troopid_connect_authorize_callback>
        <block type="page/html" name="root" output="toHtml" template="troopid/connect/callback.phtml"/>
    </troopid_connect_authorize_callback>
</layout>
